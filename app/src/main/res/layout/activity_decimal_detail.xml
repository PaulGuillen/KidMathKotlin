<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".operations.settings.details.segmentone.DecimalDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ActionBarStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/monserratalternates_bold"
                    android:text="Decimal"
                    android:textColor="@color/green_primary_dark"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/monserratalternates_bold"
                    android:paddingStart="5dp"
                    android:text="teoría"
                    android:textColor="@color/color_primary_gray"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry,TextContrastCheck" />

            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_body"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="55dp"
            app:layout_constraintBottom_toBottomOf="@id/constraint_bottom"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="10dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Decena"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/guideline_percent"
                app:layout_constraintEnd_toEndOf="@+id/guideline_percent"
                app:layout_constraintStart_toEndOf="@+id/guideline_percent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_right"
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="@+id/textView1" />

            <View
                android:id="@+id/view_left"
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintEnd_toStartOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="5"
                android:textColor="@color/teal_200"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="@+id/view_right"
                app:layout_constraintStart_toStartOf="@id/view_left"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Unidad"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView1"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="6"
                android:textColor="@color/teal_200"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="@+id/view_right_second"
                app:layout_constraintStart_toStartOf="@id/view_right"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <View
                android:id="@+id/view_right_second"
                android:layout_width="2dp"
                android:layout_height="170dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Centena"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView1"
                app:layout_constraintEnd_toStartOf="@+id/view_left"
                app:layout_constraintTop_toTopOf="@+id/textView1" />

            <View
                android:id="@+id/view_left_second"
                android:layout_width="2dp"
                android:layout_height="170dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="2"
                android:textColor="@color/teal_200"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="@+id/view_left"
                app:layout_constraintStart_toStartOf="@id/view_left_second"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Parte entera"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/view_right_second"
                app:layout_constraintStart_toStartOf="@id/view_left_second"
                app:layout_constraintTop_toBottomOf="@+id/view_left" />

            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_arrow_left"
                android:fontFamily="@font/monserratalternates_bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline_percent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <View
                android:id="@+id/view_right_bottom"
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <View
                android:id="@+id/view_left_bottom"
                android:layout_width="2dp"
                android:layout_height="120dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Centésima"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/guideline_percent"
                app:layout_constraintStart_toStartOf="@id/guideline_percent"
                app:layout_constraintTop_toBottomOf="@+id/imageview1" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="3"
                android:textColor="@color/teal_200"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="@+id/view_right_bottom"
                app:layout_constraintStart_toStartOf="@id/view_left_bottom"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Décima"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/view_left_bottom"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="1"
                android:textColor="@color/teal_200"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="@+id/view_left_bottom"
                app:layout_constraintStart_toStartOf="@id/view_left_bottom_second"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <View
                android:id="@+id/view_left_bottom_second"
                android:layout_width="2dp"
                android:layout_height="170dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="5dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintEnd_toStartOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Milésima"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toStartOf="@+id/view_right_bottom"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="8"
                android:textColor="@color/teal_200"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="@+id/view_right_bottom_second"
                app:layout_constraintStart_toStartOf="@id/view_right_bottom"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <View
                android:id="@+id/view_right_bottom_second"
                android:layout_width="3dp"
                android:layout_height="170dp"
                android:layout_marginStart="4dp"
                android:background="@color/blue_primary_dark"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Parte decimal"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/view_right_bottom_second"
                app:layout_constraintStart_toStartOf="@id/view_left_bottom_second"
                app:layout_constraintTop_toBottomOf="@+id/view_left_bottom" />

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_right_arrow"
                android:fontFamily="@font/monserratalternates_bold"
                app:layout_constraintStart_toEndOf="@+id/guideline_percent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <LinearLayout
                android:id="@+id/linearlayout_propiedad_uno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageview2">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:textSize="17sp"
                            android:text="Decimal \nExacto"
                            android:textAlignment="center" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_regular"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textStyle="bold"
                            android:text="Un número decimal exacto es aquel que tiene un número limitado de cifras decimales."
                            android:textAlignment="center"
                            android:textSize="17sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="7,8"
                            android:textSize="17sp"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="0,75"
                            android:textSize="17sp"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="20,1"
                            android:textSize="17sp"
                            android:textAlignment="center" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="Decimal \nPeriódico"
                            android:textSize="17sp"
                            android:textAlignment="center" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/monserratalternates_regular"
                            android:paddingTop="10dp"
                            android:textStyle="bold"
                            android:paddingBottom="10dp"
                            android:textSize="17sp"
                            android:text="Un número decimal periódico es aquel que tiene infinitas cifras decimales que se repiten periódicamente."
                            android:textAlignment="center" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="Decimal periódico puro"
                            android:textSize="17sp"
                            android:textAlignment="center" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:textSize="17sp"
                            android:text="4,3434..= 4,34"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:textSize="17sp"
                            android:text="1,66666 = 1,6"
                            android:textAlignment="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="5dp"
                            android:background="#DFDFDF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="Decimal periódico mixto"
                            android:textSize="17sp"
                            android:textAlignment="center" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="0,0333 = 0,0 3"
                            android:textSize="17sp"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/monserratalternates_bold"
                            android:text="1,2555.. = 1,2 5"
                            android:textSize="17sp"
                            android:textAlignment="center" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monserratalternates_regular"
                android:padding="20dp"
                android:text="Nota: utilizaremos el símbolo , para denotar el punto decimal (por ejemplo, escribiremos el número dos coma cinco de la forma 2,5) y los puntos suspensivos ... para indicar que un número tiene infinitos decimales."
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearlayout_propiedad_uno" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/text_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/muli"
                android:text="Volver"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/muli"
                android:text="Siguiente"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>