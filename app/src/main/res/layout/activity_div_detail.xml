<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".operations.settings.details.DivDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ActionBarStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/monserratalternates_bold"
                    android:text="División"
                    android:textColor="@color/green_primary_dark"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/monserratalternates_bold"
                    android:paddingStart="5dp"
                    android:text="teoría"
                    android:textColor="@color/color_primary_gray"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry,TextContrastCheck" />


            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/text_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/monserratalternates_regular"
            android:maxLines="3"
            android:text="Las divisiones son una operación matemática que consiste en ir repartiendo en partes iguales un total. Una división es una operación matemática básica diferente a la multiplicación dado que su función es conocer cuántas veces el divisor puede llegar al contenido en el dividendo"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineuno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="80dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinedos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="150dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="125"
            android:textColor="@color/teal_200"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/text_top" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:background="@color/black"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="125"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="5"
            android:textColor="@color/orange_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/text_top" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="55dp"
            android:layout_height="3dp"
            android:background="@color/black"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="125"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="25"
            android:textColor="@color/red_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="10"
            android:textColor="@color/blue_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/view_rayita"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:background="@color/black"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="125"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="25"
            android:textColor="@color/blue_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/view_rayita" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="25"
            android:textColor="@color/blue_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/view_rayita_second"
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_marginStart="20dp"
            android:background="@color/black"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="125"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@id/textView8" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="0"
            android:textColor="@color/purple_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/view_rayita_second" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="125 = Dividendo"
            android:textColor="@color/teal_200"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@id/guidelinedos"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="5 = Divisor"
            android:textColor="@color/orange_primary_dark"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guidelinedos"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="25 = Cociente"
            android:textColor="@color/red_primary_dark"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guidelinedos"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="0 = Residuo"
            android:textColor="@color/purple_primary_dark"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guidelinedos"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />


        <LinearLayout
            android:id="@+id/linearlayout_propiedad_uno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView9">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Division \nExacta"
                        android:textAlignment="center" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_regular"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Una división exacta es aquella que cuando al resolver la división, el resultado del resto es igual a cero."
                        android:textAlignment="center"
                        android:textSize="15sp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="División de : 14/2"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Cociente : 7"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Residuo : 0"
                        android:textAlignment="center" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Division \nInexacta"
                        android:textAlignment="center" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/monserratalternates_regular"
                        android:maxLines="4"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="En las divisiones inexactas la cifra del resto cuenta con un valor diferente a cero, es importante destacar que el resto debe ser menor que el divisor."
                        android:textAlignment="center" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="División 19/2"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Cociente: 9"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Residuo: 1"
                        android:textAlignment="center" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monserratalternates_bold"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_propiedad_uno"
            android:text="Puede ocurrir que la división no se pueda resolver porque el número que se formó en el resto es una cifra menor que el divisor."
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>