<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".operations.settings.details.FracDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ActionBarStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/monserratalternates_bold"
                    android:text="Fracciones"
                    android:textColor="@color/green_primary_dark"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/monserratalternates_bold"
                    android:paddingStart="5dp"
                    android:text="teoría"
                    android:textColor="@color/color_primary_gray"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry,TextContrastCheck" />


            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineuno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="50dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinedos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/monserratalternates_regular"
            android:maxLines="4"
            android:padding="10dp"
            android:text="Las fracciones pueden categorizarse en función de distintos criterios. Por ejemplo, cuál es la diferencia entre el numerador y el denominador, o también en función de la relación que tienen dos fracciones."
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="3"
            android:textColor="@color/red_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <View
            android:id="@+id/view_start"
            android:layout_width="21dp"
            android:layout_height="3dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/textview1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="5"
            android:textColor="@color/purple_primary_dark"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@+id/view_start" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="+"
            android:textSize="35sp"

            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@id/view_start"
            app:layout_constraintTop_toTopOf="@+id/textview1" />

        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="6"
            android:textColor="@color/purple_primary_dark"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview1"
            app:layout_constraintStart_toEndOf="@id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textview1" />

        <View
            android:id="@+id/view_start_second"
            android:layout_width="21dp"
            android:layout_height="3dp"
            android:layout_marginStart="6dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textview4" />

        <TextView
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="8"
            android:textColor="@color/red_primary_dark"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="="
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@+id/textview5"
            app:layout_constraintStart_toEndOf="@id/view_start_second"
            app:layout_constraintTop_toTopOf="@+id/textview4" />


        <View
            android:id="@+id/view_end_first"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:layout_marginStart="6dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textview4" />

        <TextView
            android:id="@+id/textview7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="(8x3) + (5x6)"
            android:textColor="@color/blue_primary_dark"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@id/view_end_first"
            app:layout_constraintEnd_toEndOf="@+id/view_end_first"
            app:layout_constraintStart_toEndOf="@id/textView6" />

        <TextView
            android:id="@+id/textview8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="5x8"
            android:textColor="@color/orange_primary_dark"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@+id/view_end_first"
            app:layout_constraintStart_toEndOf="@id/textView6"
            app:layout_constraintTop_toBottomOf="@id/view_end_first" />

        <!--Leyenda de los colores-->

        <TextView
            android:id="@+id/textview9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="Esta multplicacion siempre \nva primero en la suma o resta"
            android:textColor="@color/red_primary_dark"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@id/textView2" />


        <TextView
            android:id="@+id/textview10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="Esta multplicacion siempre \nva al final de la suma o resta"
            android:textColor="@color/purple_primary_dark"
            app:layout_constraintEnd_toStartOf="@id/guidelinedos"
            app:layout_constraintTop_toBottomOf="@id/textview9" />

        <TextView
            android:id="@+id/textview11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="Multiplica los denominadores \npara obtener un denominador común."
            android:textColor="@color/orange_primary_dark"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@id/textview10" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="="
            android:textSize="35sp"
            app:layout_constraintStart_toEndOf="@id/view_start_second"
            app:layout_constraintTop_toBottomOf="@+id/textview11" />


        <View
            android:id="@+id/view_end_second"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:layout_marginStart="6dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="@+id/textView12" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="24 + 30"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@id/view_end_second"
            app:layout_constraintEnd_toEndOf="@+id/view_end_second"
            app:layout_constraintStart_toEndOf="@id/textView12" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="40"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@+id/view_end_second"
            app:layout_constraintStart_toEndOf="@id/textView12"
            app:layout_constraintTop_toBottomOf="@id/view_end_second" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="="
            android:textSize="35sp"
            app:layout_constraintStart_toEndOf="@id/view_start_second"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <View
            android:id="@+id/view_end_third"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginStart="6dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView15"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toTopOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="54"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@id/view_end_third"
            app:layout_constraintEnd_toEndOf="@+id/view_end_third"
            app:layout_constraintStart_toEndOf="@id/textView15" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="40"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@+id/view_end_third"
            app:layout_constraintStart_toEndOf="@id/textView15"
            app:layout_constraintTop_toBottomOf="@id/view_end_third" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="="
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintStart_toEndOf="@+id/view_end_third"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <View
            android:id="@+id/view_end_fourth"
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginStart="6dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView18"
            app:layout_constraintStart_toEndOf="@+id/textView18"
            app:layout_constraintTop_toTopOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="20"
            android:textColor="@color/green_primary_dark"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="@+id/view_end_fourth"
            app:layout_constraintStart_toEndOf="@id/textView18"
            app:layout_constraintTop_toBottomOf="@id/view_end_fourth" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="27"
            android:textColor="@color/green_primary_dark"
            android:textSize="35sp"
            app:layout_constraintBottom_toTopOf="@id/view_end_fourth"
            app:layout_constraintEnd_toEndOf="@+id/view_end_fourth"
            app:layout_constraintStart_toEndOf="@id/textView18" />

        <TextView
            android:id="@+id/textview21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="Fracción simplificada este \nresultado es posible cuando \nambos números pueden ser dividos."
            android:textColor="@color/green_primary_dark"
            app:layout_constraintStart_toStartOf="@id/guidelineuno"
            app:layout_constraintTop_toBottomOf="@id/textView19" />

        <LinearLayout
            android:id="@+id/linearlayout_propiedad_uno"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview21"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Fracciones Propias" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/monserratalternates_regular"
                        android:text="El numerador es menor que el denominador, como en los siguientes casos." />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="3 " />


                            <View
                                android:layout_gravity="center"
                                android:background="@color/black"
                                android:layout_width="20dp"
                                android:layout_height="3dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="11 " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="2 " />

                            <View
                                android:layout_gravity="center"
                                android:background="@color/black"
                                android:layout_width="20dp"
                                android:layout_height="3dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="7 " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="5 " />


                            <View
                                android:layout_gravity="center"
                                android:background="@color/black"
                                android:layout_width="20dp"
                                android:layout_height="3dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="7 " />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:fontFamily="@font/monserratalternates_bold"
                        android:text="Fracciones Impropias" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="3"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:ellipsize="end"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monserratalternates_regular"
                        android:text=" El numerador es mayor que el denominador de la fracción." />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="8 " />


                            <View
                                android:layout_gravity="center"
                                android:background="@color/black"
                                android:layout_width="20dp"
                                android:layout_height="3dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="5 " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="12 " />

                            <View
                                android:layout_gravity="center"
                                android:background="@color/black"
                                android:layout_width="20dp"
                                android:layout_height="3dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="6 " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="7 " />


                            <View
                                android:layout_gravity="center"
                                android:background="@color/black"
                                android:layout_width="20dp"
                                android:layout_height="3dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/monserratalternates_bold"
                                android:text="3 " />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/monserratalternates_bold"
            android:text="Fracción simplificada este \nresultado es posible cuando \nambos números pueden ser dividos."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearlayout_propiedad_uno" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>