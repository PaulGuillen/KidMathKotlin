                app:layout_constraintTop_toTopOf="@+id/textView18" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="20"
                android:textColor="@color/green_primary_dark"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="@+id/view_end_fourth"
                app:layout_constraintStart_toEndOf="@id/textView18"
                app:layout_constraintTop_toBottomOf="@id/view_end_fourth" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="27"
                android:textColor="@color/green_primary_dark"
                android:textSize="35sp"
                app:layout_constraintBottom_toTopOf="@id/view_end_fourth"
                app:layout_constraintEnd_toEndOf="@+id/view_end_fourth"
                app:layout_constraintStart_toEndOf="@id/textView18" />

            <TextView
                android:id="@+id/textview21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Fracción simplificada este \nresultado es posible cuando \nambos números pueden ser dividos."
                android:textColor="@color/green_primary_dark"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/guideline_percent"
                app:layout_constraintStart_toStartOf="@id/guideline_percent"
                app:layout_constraintTop_toBottomOf="@id/textView19" />

            <LinearLayout
                android:id="@+id/linearlayout_propiedad_uno"
