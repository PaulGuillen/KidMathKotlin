                app:layout_constraintTop_toBottomOf="@+id/textview1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="5"
                android:textColor="@color/purple_primary_dark"
                android:textSize="35sp"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/view_start"
                app:layout_constraintTop_toBottomOf="@+id/view_start" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="+"
                android:textSize="35sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/view_start_second"
                app:layout_constraintTop_toTopOf="@+id/textview1" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="6"
                android:textColor="@color/purple_primary_dark"
                android:textSize="35sp"
                app:layout_constraintEnd_toStartOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/view_start_second"
                app:layout_constraintTop_toTopOf="@+id/textview1" />

            <View
                android:id="@+id/view_start_second"
                android:layout_width="21dp"
                android:layout_height="3dp"
